<h1>Productos Majana</h1>


<h2>Crear producto</h2>
<form id="addProductForm" action="">
  <input type="text" placeholder="name" />
  <br />
  <input type="text" placeholder="description" />
  <br />
  <input type="text" placeholder="code" />
  <br />
  <input type="text" placeholder="price" />
  <br />
  <input type="text" placeholder="status" />
  <br />
  <input type="text" placeholder="stock" />
  <br />
  <input type="text" placeholder="category" />
  <br />
  <input type="text" placeholder="img 1" />
  <br />
  <input type="text" placeholder="img 2" />
  <br />
  <input type="submit" value="Enviar" />
</form>

<h2>Eliminar producto</h2>

<form id="deleteProductForm" action="">
  <input type="text" placeholder="Ingrese ID" />
  <br />
  <input type="submit" value="Enviar" />
</form>


<h2>Lista de productos</h2>
<span>Lista actualizada!</span>
{{#each products}}
  <div>
    <h2>{{this.title}}</h2>
    <p>{{this.description}}</p>
    {{#if status}}
      <p>Disponible</p>
    {{else}}
      <p>No disponible</p>
    {{/if}}
  </div>
{{/each}}

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>